<!-- orders-list start -->
<section class="py-16 light">
    <div class="container mx-auto ">
        <h1 class="font-bold">All orders</h1>
        <% if(messages.success) {%>
            <div id="success-alert" class="flex items-center bg-green-500 text-white text-sm font-blod px-4 py-3"
            role="alert">
            <p><%= messages.success%></p>
        </div>
        <% } %>
        <table class="w-full table-auto bg-white">
            <thead>
                <tr>
                    <th class="text-left py-3 px-3">Orders</th>
                    <th class="text-left py-3 px-3">Phone</th>
                    <th class="text-left py-3 px-3">Address</th>
                    <th class="text-left py-3 px-3">Time</th>
                </tr>
            </thead>
            <tbody>
                <% if(orders.length){ %>
                    <% orders.forEach((order)=>{ %>
                        <tr>
                            <td class="border px-3 py-2"><a href="/" class="link"><%= order._id%></a></td>
                            <td class="border px-3 py-2"><%= order.phone%></td>
                            <td class="border px-3 py-2"><%= order.address%></td>
                            <td class="border px-3 py-2"><%= moment(order.createdAt).format('MMM do, hh:mm A') %></td>
                        </tr>
                        <% }) %>
                            <% } else { %>
                                <tr><span>No orders found!</span></tr>
                                <% } %>
            </tbody>
        </table>
    </div>
</section>
<!-- orders-list end -->